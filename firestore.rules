rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;

      match /users {
        allow read: if true;
        allow write: if false;

        match /{uid} {
          allow write: if request.auth.uid == uid;
          allow read: if request.auth.uid != null;
        }
      }

      // TODO Remove this
      match /strings {
        allow read: if true;
        allow write: if false;
      }
    }
  }
}